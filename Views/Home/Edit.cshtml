@model WebApplication1.Models.Contacts

<h2>Редактирование пользователя</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Number">Номер</label><br />
        <input type="number" asp-for="Number" />
    </p>
    <p>
        <label asp-for="Name">Имя</label><br/>
        <input type="text" asp-for="Name"/>
    </p> 
    <p>
        <label asp-for="Age">Возраст</label><br />
        <input type="number" asp-for="Age" />
    </p>
    <p>
        <label asp-for="Mail">Mail</label><br />
        <input type="text" asp-for="Mail" />
    </p>
    <p>
        <label asp-for="Addres">Адрес</label><br />
        <input type="number" asp-for="Addres" />
    </p>
    <p>
        <input type="submit" value="Отправить"/>
    </p>
</form>